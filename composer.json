{
    "name": "arachne/twig",
    "description": "Basic integration of Twig to Nette Framework. Used by arachne/forms.",
    "type": "library",
    "keywords": [ "nette", "arachne", "twig" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5.0|^7.0.0",
        "arachne/service-collections": "^0.1.0",
        "nette/di": "^2.3.0",
        "twig/twig": "^1.26.0|^2.0.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "codeception/codeception": "^2.3.2",
        "yep/tracy-twig-extensions": "^1.0.0"
    },
    "suggest": {
        "yep/tracy-twig-extensions": "Enables Tracy dumps in Twig templates."
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Twig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/integration/src"
        }
    },
    "scripts": {
        "tools": "sh composer-tools.sh",
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
